<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.oxana.codekata.codekata.MainActivity"
>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/result"/>


    <LinearLayout
        android:weightSum="2"

        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First player"/>

            <Button
                android:text="paper"
                android:id="@+id/button1_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:text="scissor"
                android:id="@+id/button1_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:text="rock"
                android:id="@+id/button1_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:text="lizard"
                android:id="@+id/button1_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:text="spock"
                android:id="@+id/button1_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>


        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Second player"/>

            <Button
                android:text="paper"
                android:id="@+id/button2_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:text="scissor"
                android:id="@+id/button2_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:text="rock"
                android:id="@+id/button2_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:text="lizard"
                android:id="@+id/button2_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:text="spock"
                android:id="@+id/button2_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>




    </LinearLayout>
</LinearLayout>
